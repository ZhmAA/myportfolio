					<section id="portfolio">
						<h2>Portfolio</h2>
						<div class="row">
						  <% @projects.each do |project| %>
							<article class="6u 12u$(xsmall) work-item">
								<div class="image-holder">
									<div class="link-holder">
										<%= link_to 'Link', project.projecturl, :class => 'fit image-btn__src' %>
										<%= link_to 'Details', project_path(project), :class => 'fit image-btn__src' %>
									</div>
									<a href="images/02.jpg" class="image fit thumb"><%= image_tag project.image.thumb.url %></a>
								</div>
								<h3><%= project.name %></h3>
								<p><%= project.description.split[0..30].join(' ').html_safe %></p>
								<%= link_to 'Show', project_path(project) %>
  									<% if admin_signed_in? %>
							          <%= link_to 'Edit', edit_project_path(project) %>
  	                                  <%= link_to 'Destroy', project_path(project),
                                                   method: :delete,
                                                   data: { confirm: 'Are you sure?' } %>
                                <% end %>
							</article>
						  <% end %>
						</div>
					</section>
				